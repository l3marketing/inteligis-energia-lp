# Rastreamento e consentimento
VITE_REQUIRE_CONSENT=false              # true para só coletar cookies com consentimento
VITE_TRACK_IP_GEO=false                 # true para habilitar geolocalização via IP

# Endpoint de geolocalização por IP (opcional)
# Ex.: https://ipinfo.io/json ou https://ipapi.co/json
VITE_IP_GEO_ENDPOINT=

# Token (se o serviço exigir)
VITE_IP_GEO_TOKEN=

# Outras variáveis úteis
# VITE_CONTACT_PHONE=                      # opcional: número de telefone para contato direto
# VITE_TRACKING_ENABLED=true               # opcional: liga/desliga coleta global

# Área restrita (MVP)
VITE_ADMIN_USERNAME=                    # usuário de acesso (e-mail), ex.: contato@inteligis.com.br
VITE_ADMIN_PASSWORD=                      # senha de acesso à área /admin (não comitar valores reais)
# VITE_API_BASE_URL=                       # futuro: base URL da API quando migrar do localStorage
# VITE_COMPANY_CNPJ=                       # opcional: CNPJ da empresa para exibição

# Supabase (Frontend usa somente a anon key; nunca usar service_role no cliente)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_USE_SUPABASE=false                  # true para usar Supabase como persistência/consulta de leads, lead_meta e app_users
# Observação: crie as tabelas no Supabase com políticas RLS apropriadas:
# - leads: permitir INSERT público (captura de leads), SELECT/UPDATE para usuários autenticados
# - lead_meta: permitir UPSERT público (metadados não sensíveis), SELECT para autenticados
# - app_users: permitir SELECT/INSERT/UPDATE/DELETE para autenticados (gestão via Admin)
# Nunca exponha a service_role key no frontend. Use apenas VITE_SUPABASE_ANON_KEY.

# Alertas (opcionais) após cadastro de lead
# Configure um webhook para receber os dados do lead e distribuir via e-mail/WhatsApp no backend
VITE_LEADS_WEBHOOK_URL=                  # ex.: https://seu-endpoint.com/webhooks/leads
VITE_LEADS_WEBHOOK_TOKEN=                # opcional: token JWT/Bearer para autenticação do webhook
# Alternativas (somente para referência; não enviamos e-mail/WhatsApp direto do frontend)
# VITE_LEADS_ALERT_EMAIL=                 # e-mail de destino para alertas (uso via backend)
# VITE_LEADS_ALERT_WHATSAPP=              # número WhatsApp para alertas (uso via backend)